@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CoreApp - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
            <a class="navbar-brand" href="/">ASP.NET Core</a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <a class="nav-link
                        @(controller == "Home" && action == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Admin</a>
                    <a class="nav-link
                        @(controller == "Home" && action == "About" ? "active" : "")"
                       asp-controller="Home" asp-action="About">About</a>
                    <a class="nav-link
                        @(controller == "Home" && action == "Contact" ? "active" : "")"
                       asp-controller="Home" asp-action="Contact">Contact</a>
                    <a class="nav-link
                        @(controller == "Student" ? "active" : "")"
                       asp-controller="Student" asp-action="List">Students</a>
                    <a class="nav-link
                        @(controller == "Level" ? "active" : "")"
                       asp-controller="Level" asp-action="List">Levels</a>
                    <a class="nav-link
                        @(controller == "Assignment" ? "active" : "")"
                        asp-controller="Assignment" asp-action="List" asp-route-id="5">Assignments</a>
                </div>
                <div class="navbar-nav navbar-right">
                    <a class="nav-link"
                       asp-area="" asp-controller="Home" asp-action="Index">View Site</a>
                </div>
            </nav>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - CoreApp</p>
    </footer>
</body>
</html>